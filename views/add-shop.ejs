<%- include("partials/header") -%>

<div class="add-shop-container">
  <h1 class="title">Registration Form</h1>
  <form class="form-container" action="" method="post">
    <div class="column-container">
      <!---------column 1 -------->
      <div class="col">
        <div class="form-group">
          <label for="">Shop name</label>
          <input
            class="input-box"
            type="text"
            name=""
            id=""
            placeholder="Enter..."
          />
        </div>
        <div class="form-group">
          <label for="">Shop owner</label>
          <input
            class="input-box"
            type="text"
            name=""
            id=""
            placeholder="Enter..."
          />
        </div>
        <div class="form-group">
          <label for="">Domain</label>
          <select
            class="input-box"
            class="custom-select"
            id="Domain"
            oninput=domainSubCategory()
          >
            <option selected>Choose...</option>
            <% domains.forEach(function(eachDomain) { %>
              <option ><%= eachDomain %></option>
            <% }) %>
          </select>
        </div>
        <div class="form-group">
          <label for="" style="font-size: 1.1em;">Items</label>
          <div class="checkbox-group" id="domainItems">
          </div>
        </div>
      </div>
      <!---------column 2 -------->
      <div class="col">
        <div class="form-group">
          <label for="">Location</label>
          <input
            class="input-box"
            type="text"
            name=""
            id=""
            placeholder="Enter..."
          />
        </div>
        <div class="form-group">
          <label for="">Description</label>
          <input
            class="input-box"
            type="text"
            name=""
            id=""
            placeholder="Enter..."
          />
        </div>
        <div class="form-group">
          <label for="">Timing</label>
          <div class="input-time">
            <input
              class="input-box"
              type="time"
              name=""
              id=""
              placeholder="Start time"
            />
            <input
              class="input-box"
              type="time"
              name=""
              id=""
              placeholder="End time"
            />
          </div>
        </div>
        <div class="form-group">
          <label for="">Upload Pics</label>
          <div class="upload-pic-group">
            <div class="upload-pic-item">
              <label for="">Shop with location</label>
              <input type="file" />
            </div>
            <div class="upload-pic-item">
              <label for="">Food pics</label>
              <input type="file" />
            </div>
            <div class="upload-pic-item">
              <label for="">Menu</label>
              <input type="file" />
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="submit-btn">
      <button type="submit" class="btn">Submit</button>
    </div>
  </form>
</div>

<%- include("partials/footer") -%>
